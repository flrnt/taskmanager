<h1>My tasks</h1>


<ul>
  <% @tasks.each do |task| %>
    <li>
     <%= task.name %>
     <%= task.description %>
     <%= task.status %>
     </li>
     <%= link_to "details", task_path(task) %>
     <%= link_to "edit", "#" %>
     <%= link_to "delete", "#" %>
  <% end %>
</ul>

<%= link_to "New task", new_task_path %>
